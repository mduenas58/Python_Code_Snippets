" Set compatibility to Vim only
" set nocompatible
"
" " Show line numbers
" set number
"
" " Status bar
" set laststatus=2
"
" " Encoding
" set encoding=utf-8
"
" " Turn on syntax highlighting
" syntax on
"
" " Call the .vimrc.plug file
" if filereadable(expand("~/.vimrc.plug"))
"     source ~/.vimrc.plug
"     endif
